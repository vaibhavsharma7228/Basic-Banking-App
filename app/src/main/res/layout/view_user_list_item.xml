<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="3dp"
    app:cardMaxElevation="5dp"
    app:cardCornerRadius="3dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rohit Das"
            android:id="@+id/username_tv"
            android:gravity="start"
            android:textSize="18sp"
            android:textColor="@color/primary_text"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_tv"
            android:text="A/C no :"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:id="@+id/acc_no"
            android:textColor="@color/secondary_text"/>
        <TextView
            android:id="@+id/acc_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/acc_no"
            android:layout_below="@+id/username_tv"
            tools:text="112"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:textColor="@color/secondary_text"/>

<!--            <ImageView-->
<!--                android:id="@+id/money_iv"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:padding="10dp"-->
<!--                android:src="@drawable/money"-->
<!--                android:layout_below="@+id/current_balance_tv"-->
<!--                android:layout_toStartOf="@+id/current_balance"-->
<!--                android:layout_marginEnd="2dp"-->
<!--                />-->

        <TextView
            android:id="@+id/current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_balance_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:textSize="16sp"
            tools:text="Rs 5000"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:layout_toEndOf="@+id/username_tv"
            android:id="@+id/current_balance_tv"
            android:gravity="end"
            android:textSize="18sp"
            android:paddingEnd="10dp"
            android:textColor="@color/primary_text"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
